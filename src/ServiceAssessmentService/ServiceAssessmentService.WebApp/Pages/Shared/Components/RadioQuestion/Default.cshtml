@model ServiceAssessmentService.WebApp.Pages.Shared.Components.RadioQuestion.RadioQuestionViewComponent.RadioQuestionHtmlModel


<govuk-radios asp-for="@Model.RadioAnswer">
    <govuk-radios-fieldset>
        <govuk-radios-fieldset-legend is-page-heading="false" class="govuk-fieldset__legend--l">@Model.Title</govuk-radios-fieldset-legend>
        @if (!string.IsNullOrWhiteSpace(Model.HintText))
        {
            <govuk-radios-hint>@Model.HintText</govuk-radios-hint>
        }
        @foreach (var radioItem in Model.RadioOptions)
        {
            <govuk-radios-item value="@radioItem.Value">
                @radioItem.DisplayTitle
                @if (radioItem.NestedQuestion is not null)
                {
                    <govuk-radios-item-conditional>
                        <vc:generic-question question="@radioItem.NestedQuestion"></vc:generic-question>
                    </govuk-radios-item-conditional>
                }
            </govuk-radios-item>
        }
    </govuk-radios-fieldset>
</govuk-radios>
