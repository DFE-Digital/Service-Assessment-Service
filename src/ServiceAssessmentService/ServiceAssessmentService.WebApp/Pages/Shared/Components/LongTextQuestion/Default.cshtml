@model ServiceAssessmentService.WebApp.Pages.Book.EditModel.QuestionHtmlModel


<govuk-character-count asp-for="@Model.LongTextAnswer" max-length="500">
    <govuk-character-count-label is-page-heading="false" class="govuk-label--l">@Model.Title</govuk-character-count-label>
    @if (!string.IsNullOrWhiteSpace(Model.HintText))
    {
        <govuk-character-count-hint>@Model.HintText</govuk-character-count-hint>
    }
</govuk-character-count>
