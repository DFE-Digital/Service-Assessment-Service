@page
@model ServiceAssessmentService.WebApp.Pages.Admin.AssessmentTypes.ListModel

@{
    ViewData["Title"] = "Listing Assessment Type";
    ViewData["Section"] = SiteSection.Admin;
}

<div class="pre--content"></div>
<div class="main--content">

    <div class="main--inside-container">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-full">
                <h1 class="govuk-heading-l">All assessmentTypes</h1>
            </div>
        </div>

        @if(!Model.AssessmentTypes.Any())
        {
            <p>There are no assessment types to view or manage.</p>
            <govuk-button-link asp-page="/Admin/AssessmentTypes/Seed">Seed Many</govuk-button-link>
        } 
        else
        {
        <ul>
            @foreach (var assessmentType in Model.AssessmentTypes.OrderBy(p => p.SortOrder))
            {
                <li>
                    <a
                        asp-page="/Admin/AssessmentTypes/View"
                        asp-route-id="@assessmentType.Id"
                        class="govuk-link">
                            @(string.IsNullOrWhiteSpace(assessmentType.Name) ? "Unnamed assessmentType" : assessmentType.Name)
                    </a>
                </li>
            }
        </ul>
        }

        <govuk-button-link asp-page="/Admin/AssessmentTypes/Create">Create New</govuk-button-link>

    </div>
</div>
